<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="onClick"
            type="android.view.View.OnClickListener"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="优先级(setPriority)"/>
                    <Spinner
                        android:id="@+id/sp_priority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/priorities"
                        android:spinnerMode="dialog"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="样式(setStyle)"/>
                    <Spinner
                        android:id="@+id/sp_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/styles"
                        android:spinnerMode="dialog"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="分类(setCategory)"/>
                    <Spinner
                        android:id="@+id/sp_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/categories"
                        android:spinnerMode="dialog"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="按钮数(addAction)"/>
                    <Spinner
                        android:id="@+id/sp_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/nums"
                        android:spinnerMode="dialog"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="进度条(setProgress)"/>
                    <Spinner
                        android:id="@+id/sp_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/progress"
                        android:spinnerMode="dialog"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="时间(setWhen)"/>
                    <Spinner
                        android:id="@+id/sp_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/when"
                        android:spinnerMode="dialog"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="默认提醒(setDefaults)"/>
                    <Spinner
                        android:id="@+id/sp_alert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/alert"
                        android:spinnerMode="dialog"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="可见性(setVisibility)"/>
                    <Spinner
                        android:id="@+id/sp_visibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/visibility"
                        android:spinnerMode="dialog"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="bottom"
                    android:text="可选信息"/>
                <Switch
                    android:id="@+id/switch_large_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="显示大图标(setLargeIcon)"/>
                <Switch
                    android:id="@+id/switch_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="显示副文本(setSubText)"/>
                <Switch
                    android:id="@+id/switch_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="显示内容info(setContentInfo)"/>
                <Switch
                    android:id="@+id/switch_ticker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="显示状态栏滚动摘要(setTicker)"/>
                <Switch
                    android:id="@+id/switch_public"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="锁屏通知(setPublicVersion)"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="bottom"
                    android:text="标志符(flags)"/>
                <Switch
                    android:id="@+id/switch_auto_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="点击通知后删除(setAutoCancel)"/>
                <Switch
                    android:id="@+id/switch_ongoing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="是否进行中(setOngoing)"/>
                <Switch
                    android:id="@+id/switch_only_alert_once"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="是否只提示一次(setOnlyAlertOnce)"/>
                <Switch
                    android:id="@+id/switch_insistent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="是否持续提醒(FLAG_INSISTENT)"/>
                <Switch
                    android:id="@+id/switch_no_clear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="不能被用户清除(FLAG_NO_CLEAR)"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="bottom"
                    android:text="事件(intent)"/>
                <Switch
                    android:id="@+id/switch_content_intent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="点击通知意图(setContentIntent)"/>
                <Switch
                    android:id="@+id/switch_delete_intent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="取消通知意图(setDeleteIntent)"/>
                <Switch
                    android:id="@+id/switch_full_screen_intent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{onClick}"
                    android:paddingTop="10dp"
                    android:text="全屏通知意图(setFullScreenIntent)"/>


            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/clear_all"
                style="@style/Button"
                android:layout_weight="1"
                android:onClick="@{onClick}"
                android:text="清除全部"/>
            <TextView
                android:id="@+id/clear"
                style="@style/Button"
                android:layout_weight="1"
                android:onClick="@{onClick}"
                android:text="清除"/>
            <TextView
                android:id="@+id/send"
                style="@style/Button"
                android:layout_weight="1"
                android:onClick="@{onClick}"
                android:text="发送通知"/>
        </LinearLayout>
    </LinearLayout>
</layout>